---
import { DailyForecastSectionUIModel } from '../uimodels/TopPageUIModel';

interface Props {
  model: DailyForecastSectionUIModel;
}

const { model } = Astro.props;
---

<div>
  <h2 class="text-2xl font-bold">Daily Forecast</h2>
  {model.forecasts.map((forecast) => (
    <div>
      <p>Date: {forecast.date}</p>
      <p>Max Temperature: {forecast.maxTemp}°C</p>
      <p>Min Temperature: {forecast.minTemp}°C</p>
      <p>Weather: {forecast.weather}</p>
    </div>
  ))}
</div> 